# Aliases
# Easy edits to bash/zsh files
alias bashrc="vim ~/.bashrc; source ~/.bashrc"
alias zshrc="vim ~/.zshrc; source ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"

# Easy directory traveral
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# tiny aliases for misc things
alias c="print '\a'; clear;"
alias e="exit"
alias v="vim"
alias cc="cd /tmp/; peerflix -d -r -f"
alias pf="cd /tmp/; peerflix -v -r -f"
alias cdd="cd ~/Desktop/"
alias pt="ping 8.8.8.8"
alias p="popd"
alias woo="fortune"
alias rt="tmux new -s rtorrent rtorrent"

# Highlight with 'moria' theme to terminal, and suppress errors
function hl { 
    highlight $1 $2 $3 -s moria -O xterm256 2> /dev/null

    if (($? != 0)); then # If the command had errors
        cat $1 # Just cat the file out instead
    fi
}

# tmux things
alias tnew="tmux new"
alias tatt="tmux attach"
alias tls="tmux ls"

# git things
alias gadd="git add"
alias gs="git status"
alias gpull="git pull"
alias gpush="git push"
gcom () {
    git commit -am $1
}

gita () {
  git add *; git commit -m $1; sleep 1; git push;
}

#alias to compress modpack
alias mp='zip -r molonium-pack2.zip . -x ".*" -x "*/.*"'

platform=$(uname)

if [[ $platform == 'Linux' ]]; then
    # Linux things
    alias apt="sudo aptitude"
    alias ls='ls --color=auto'
    alias l='ls -lahF --color=always'
    alias mc='tatt -t Minecraft'
elif [[ $platform == 'Darwin' ]]; then
    # OS X things
    alias choochoo="while true; do /usr/local/opt/sl/bin/sl; done"
    alias pb="pbpaste | pbcopy"
    alias omega="mosh --ssh='ssh -p 2222' m -p 4050"
    alias omegal="mosh --ssh='ssh -p 2222' l"
    alias ls='ls -G'
    alias l='ls -lahFG'
    alias o="open"
fi
